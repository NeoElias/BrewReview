<% layout('/layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Brewery</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/breweries/<%= brewery._id %>?_method=PUT " method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="brewery[title]" value="<%= brewery.title %> " required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="brewery[location]" value="<%= brewery.location %> " required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
                
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="brewery[description]" required><%= brewery.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            
            <div class="mb-3">
                <label class="form-label" for="thumbnail">Current Image</label>
                <div>
                    <% brewery.image.forEach(function(img, i) {%>
                        <img src="<%= img.thumbnail %> " class="img-thumbnail" alt=""> 
                    <% }) %> 

                </div>
                
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Update Current Image</label>
                <input class="form-control" type="file" id="image" name="image">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div class="mb-3">
                <button class="btn btn-info">Update Brewery</button>
            </div>
            
        </form>
    </div>
</div>

<a href="/breweries/<%= brewery._id %> ">Back to Brewery</a>
    
